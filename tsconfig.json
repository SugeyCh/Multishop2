{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@a/*": [
        "./app/*"
      ],
      "@c/*": [
        "./app/components/*"
      ],
      "@comp/*": [
        "./components/ui/*"
      ],
      "@g/*": [
        "./app/global/*"
      ],
      "@s/*": [
        "./styles/*"
      ],
      "@api/*": [
        "./pages/api/*"
      ],
      "@p/*": ["./public/*"],
      "@l/*": ["./lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
